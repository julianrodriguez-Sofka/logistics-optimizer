# Backend Environment Variables
# Copy this file to .env for local development

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
LOG_LEVEL=debug

# MongoDB Configuration
# IMPORTANT: Never use default credentials in production!
# Generate strong passwords: openssl rand -base64 32
MONGODB_URI=mongodb://username:password@localhost:27017/logistics-optimizer?authSource=admin

# RabbitMQ Configuration  
# IMPORTANT: Change default credentials in production!
RABBITMQ_URI=amqp://username:password@localhost:5672

# Adapter Configuration
ADAPTER_TIMEOUT=5000

# Cache Configuration
CACHE_TTL_SECONDS=300
